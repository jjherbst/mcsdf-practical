{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // Run the workflow against a sample EXE (auto-detects YARA rules via defaults)
            "name": "Run Workflow (EXE)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/workflow.py",
            "console": "integratedTerminal",
            "args": [
                "--source_file=benign_malware.py",
                "--exe=.benign_malware.exe",
                "--input=./dist/input",
                "--output=./dist/output",
                "--working=./dist/working",
                "--yara_rules=./yara_detector/yara_rules.yar"
            ]
        },
        {
            // Run Mode 2: Full Static Analysis (Source + Binary)
            "name": "Debug Mode 2 - Full Static Analysis",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/workflow.py",
            "console": "integratedTerminal",
            "args": [
                "--mode=2",
                "--source=benign_malware.py",
                "--exe=benign_malware.exe",
                "--input=./dist/input",
                "--output=./dist/output",
                "--working=./dist/working",
                "--yara_rules=./yara_detector/yara_rules.yar",
                "--pdf=debug_full_analysis.pdf"
            ]
        },
        {
            // Run Mode 1: Source Only Analysis
            "name": "Debug Mode 1 - Source Only",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/workflow.py",
            "console": "integratedTerminal",
            "args": [
                "--mode=1",
                "--source=benign_malware.py",
                "--input=./dist/input",
                "--output=./dist/output",
                "--yara_rules=./yara_detector/yara_rules.yar",
                "--pdf=debug_source_analysis.pdf"
            ]
        }
    ]
}